<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <p>follow <%= @user.following.count %></p>
      <p>follower <%= @user.followers.count %></p>
    </section><p>
    <section class="post_form">
      <%= render 'shared/post_form' %>
    </section>
  </aside>
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <% @posts.each do |post| %>
      <span><%= post.text %></span>
    <br>
    <% end %>
  <% end %>
</div>