<%= form_with(model: @post, local: true) do |f| %>
  <div class="field">
    <%= f.text_area :text, placeholder: "Compose new post..." %>
    <%= f.text_area :image, placeholder: "Compose new post..." %>
    <%= f.hidden_field :user_id, value: @user.id %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary", formaction: posts_path %>
<% end %>